{
  "env": {
    "SUI_REFERENCE_PATH": "~/repos/sui-reference-main"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/dev/manage-local-repos.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/olet/suibase/.claude/hooks/stop.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command", 
            "command": "/home/olet/suibase/.claude/hooks/notification.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "additionalDirectories": ["~/repos"],
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Bash(source:*)",
      "Bash(echo:*)"
    ],
    "deny": [
      "Bash(command:*run-all.sh*)",
      "WebFetch(domain:github.com/MystenLabs/sui)"
    ]
  }
}
